<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Labels>
    <Label group="ORDER_PRODUCT">
        <Function logic="get" param="Thank you">
            <Condition logic="greater_than_or_equals">
                <Function logic="get" param="@{walletAmount}" />
                <Function logic="get" param="@{productPrice}" />
            </Condition>
        </Function>
    </Label>

    <Label group="OVER_17_PRODUCT_ONLY">
        <Function logic="get" param="Thank you">
            <Condition logic="and">
                <Condition logic="greater_than" value2="17">
                    <Function logic="get" param="@{age}" />
                </Condition>
                <Condition logic="greater_than_or_equals">
                    <Function logic="get" param="@{walletAmount}" />
                    <Function logic="get" param="@{productPrice}" />
                </Condition>
            </Condition>
        </Function>
    </Label>

    <Label group="HALF_PRICE_FOR_CHILDREN_OR_ELDER">
        <Function logic="choose">
            <Function logic="get" param="HALF_PRICE">
                <Condition logic="or">
                    <Condition logic="less_than" value2="12">
                        <Function logic="get" param="@{age}" />
                    </Condition>
                    <Condition logic="greater_than" value2="60">
                        <Function logic="get" param="@{age}" />
                    </Condition>
                </Condition>
            </Function>
            <Function logic="get" param="FULL_PRICE" />
        </Function>
    </Label>
</Labels>