<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Labels>
    <Label group="BY_SPECIFIC_KEY">
        <Definitions>
            <Definition name="REPLACE_KEY">
                <Item key="KEY1" value="John" />
            </Definition>
        </Definitions>
        <Function name="replace" param1="#{REPLACE_KEY.KEY1}">
            <Function name="get" param1="Hello KEY1!" />
        </Function>
    </Label>

    <Label group="REPLACE_DEFINITION_AT_SPECIFIC_KEY_BY_FIELD">
        <Definitions>
            <Definition name="REPLACE_KEY">
                <Item key="AMOUNT_PATTERN" value="AMOUNT=[X]" />
            </Definition>
        </Definitions>
        <Function name="replace" param1="[X]">
            <Function name="get" param1="#{REPLACE_KEY.AMOUNT_PATTERN}" />
            <Function name="get" param1="@{amount}" />
        </Function>
    </Label>

    <Label group="REPLACE_DEFINITION_AT_SPECIFIC_KEY_BY_MAP">
        <Definitions>
            <Definition name="REPLACE_KEY">
                <Item key="AMOUNT_PATTERN" value="AMOUNT=!@#$" />
            </Definition>
        </Definitions>
        <Function name="replace" param1="@{target}">
            <Function name="get" param1="#{REPLACE_KEY.AMOUNT_PATTERN}" />
            <Function name="get" param1="@{amount}" />
        </Function>
    </Label>
</Labels>